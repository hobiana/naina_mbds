@model MauritiusGuideBackEnd.ViewModel.PhotoCheckPointViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Update", "Photo_CheckPoint", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Photo_CheckPoint</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Photo_CheckPoint.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Photo_CheckPoint.Photo_Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Photo_CheckPoint.Photo_Path, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Photo_CheckPoint.Photo_Path, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo_CheckPoint.Photo_Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-offset-2 col-md-10">
                <img src="data:image / png; base64,@Model.Photo_CheckPoint.Photo_Code" />
               
            </div>
        </div>
        <div class="form-group">
             @Html.Label("Nouveau ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="file" name="file"/>
                @Html.ValidationMessageFor(model => model.Photo_CheckPoint.Photo_Code, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.Photo_CheckPoint.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Photo_CheckPoint.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Photo_CheckPoint.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo_CheckPoint.CheckPointId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Photo_CheckPoint.CheckPointId, new SelectList(Model.CheckPoints, "ID", "BeaconName", Model.Photo_CheckPoint.CheckPointId), "Select places", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Photo_CheckPoint.CheckPointId, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.Hidden("Photo_CheckPoint.Photo_Code", Model.Photo_CheckPoint.Photo_Code)
                @Html.Hidden("Photo_CheckPoint.Photo_Extension", Model.Photo_CheckPoint.Photo_Extension)
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
